@model NewPacketViewModel
@{
    ViewData["Title"] = "Create packet";
    Canteen canteen = CanteenEnumerable.FromId<Canteen>(Model.CanteenId);
}
<div class="border justify-content-center mt-0 p-5 page-card" border-radius:5px;">
    <h3>Create packet</h3>
    <p class="border-bottom pb-3">Create a packet for a student to be able to pickup. Make sure to choose the right date and time and a price according to the contents. 
        The packet will be offered at canteen @(canteen.Name) in @(canteen.City).</p>

    <div class="text-danger" asp-validation-summary="All"></div>

    <form class="g-3" id="packetform" asp-action="AddPacket" asp-controller="Packet" method="post">
        <partial name="_PacketForm" model="Model" />
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-primary" id="modalid">
                Create packet
            </button>
            <a type="button" class="btn btn-secondary justify-content-end" asp-action="CanteenPackets" asp-controller="Packet">
                Cancel
            </a>
        </div>
        <div class="modal checkmodal fade" id="createModel" tabindex="-1" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirm create</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to add this packet?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create packet</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/packetFormValidation.js" asp-append-version="true"></script>
}

