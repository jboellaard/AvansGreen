@model Packet
@{
    bool authenticated = User.Identity!.IsAuthenticated;
    var claimValue = User.FindFirst("UserType")?.Value;
}

<div class="d-flex justify-content-between">
    <div>
        <h2>@(Model.Name)</h2>
    </div>
    <div class="justify-content-end">
        @{
            if (authenticated)
            {
                if (claimValue is "Student" or "Admin")
                {
                    <button class="btn btn-primary" asp-action="Reserve" asp-controller="Packet" >Reserve</button>
                }
                if (claimValue is "CanteenEmployee" or "Admin")
                {
                    <button class="btn btn-primary" asp-action="Edit" asp-controller="Packet">Edit</button>
                }
            }
            else
            {
            }
        }
    </div>
</div>